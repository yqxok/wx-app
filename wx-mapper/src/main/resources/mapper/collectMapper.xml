<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pri.yqx.mapper.CollectMapper">
    <resultMap id="jsonMap" type="pri.yqx.vo.CollectVo">
        <result property="picUrls"   column="pic_urls"
                typeHandler="pri.yqx.json.PicUrlJsonHandler" />
    </resultMap>

    <select id="getCollectVoList" resultMap="jsonMap">
        select c.collect_id,c.good_id,g.user_id,u.user_name,u.profile_pic_url,g.html,g.price,g.pic_urls,g.status,c.create_time
        from wx_collect c left join wx_good g on c.good_id=g.good_id inner join wx_user u on g.user_id=u.user_id
        where c.user_id=#{userId} order by c.create_time desc limit #{index},#{pageSize}
    </select>
